{{!
    @template local_dttutor/admin_custom_avatar_preview

    Custom avatar preview template

    Context variables required for this template:
    * url - URL to the custom avatar image
    * str_preview - Localized "Preview" string
}}
<div class="mt-2">
    <div class="alert alert-success">
        <strong>{{str_preview}}</strong><br>
        <img src="{{url}}" alt="Custom avatar preview" style="max-width: 150px; max-height: 150px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.15); margin-top: 5px;">
    </div>
</div>
