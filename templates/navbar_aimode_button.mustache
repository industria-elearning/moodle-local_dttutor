{{!
    @template local_dttutor/navbar_aimode_button

    AI Mode navbar button template.

    Context variables:
    * userid - Current user ID
    * buttontext - Text to display on the button

    Example context (json):
    {
        "userid": 2,
        "buttontext": "AI Mode"
    }
}}
<div class="popover-region collapsed">
    <button
        class="btn btn-light icon-no-margin"
        data-action="open-ai-modal"
        data-userid="{{ userid }}"
        aria-label="{{ buttontext }}"
        title="{{ buttontext }}"
        type="button"
    >
        <i class="icon fa fa-robot fa-fw" aria-hidden="true"></i>
        <span class="d-none d-sm-inline">{{ buttontext }}</span>
    </button>
</div>
